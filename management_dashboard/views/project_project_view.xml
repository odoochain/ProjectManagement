<odoo>

    <record id="inherit_project_analysis_tree_view" model="ir.ui.view">
        <field name="name">inherit.project.analysis.tree.view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_budget_management.project_analysis_tree_view" />
        <field name="arch" type="xml">
            <field name="expected_end_date" position="after">
                <field name="progress" widget="progressbar" />
                <field name="open_tasks_count" />
                <field name="todo_ticket_count" />
            </field>
        </field>
    </record>

    <record id="inherit_view_project_project_form" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    type="action"
                    icon="fa-tasks"
                    name="%(project.dblc_proj)d"
                    context="{'search_default_open_tasks': 1}"
                >
                    <field string="Open Tasks" name="open_tasks_count" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
