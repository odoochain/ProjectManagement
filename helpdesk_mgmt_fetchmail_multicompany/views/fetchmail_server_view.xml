<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="ir_mail_server_form_add_helpdesk_team">
        <field name="name">fetchmail.server.form</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="mail.view_email_server_form" />
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    options="{'no_create': True}"
                />
                <field name="company_id" invisible="1" />
            </field>
            <field name="object_id" position="after">
                <field name="has_helpdesk_ticket_object" invisible="1"/>
                <field
                    name="team_id"
                    options="{'no_create': True}"
                    attrs="{'invisible':[('has_helpdesk_ticket_object','=',False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
